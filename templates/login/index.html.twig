{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<main class="container mt-5">
    {% if error %}
    <div>
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    {% endif %}

    <form class="border mt-5  rounded" action="{{ path('app_login') }}" method="post">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <label class="text-dark" for="username">Email:</label>
            <input class="border rounded"   type="text" id="username" name="_username" value="{{ last_username }}">
            
            <label class="text-dark" for="password">Password:</label>
            <input class="border rounded" type="password" id="password" name="_password">

            <input class="text-dark" type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn mt-3 btn-primary" type="submit">login</button>
        </div>
    </form>
            <a class="btn custom-width btn-outline-primary  mt-5 d-flex justify-content-center m-auto fw-bolder" href="{{path('app_register')}}">S'INSCRIRE</a>

</main>
{% endblock %}